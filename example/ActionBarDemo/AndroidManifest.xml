<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.actionbardemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.actionbardemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.actionbardemo.ActionItemsByCoding"></activity>
        <activity android:name="com.example.actionbardemo.ActionItemsByXML"></activity>
        <activity android:name="com.example.actionbardemo.ActionModes"></activity>
        <activity android:name="com.example.actionbardemo.ActionModesNoActionBar"></activity>
        <activity android:name="com.example.actionbardemo.ActionProviders"></activity>
        <activity android:name="com.example.actionbardemo.CollapsibleActionItem"></activity>
        <activity android:name="com.example.actionbardemo.ContextMenuDemo"></activity>
        <activity android:name="com.example.actionbardemo.CustomNavigation"></activity>
        <activity android:name="com.example.actionbardemo.FeatureToggle"></activity>
        <activity android:name="com.example.actionbardemo.IndeterminateProgress"></activity>
        <activity android:name="com.example.actionbardemo.ListNavigation"></activity>
        <activity android:name="com.example.actionbardemo.Overlay"></activity>
        <activity android:name="com.example.actionbardemo.ProgressActivity"></activity>
        <activity android:name="com.example.actionbardemo.SearchViewActivity"></activity>
        <activity android:name="com.example.actionbardemo.ShareActionProvider"></activity>
        <activity android:name="com.example.actionbardemo.SplitActionItems">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name="com.example.actionbardemo.SplitActionModes">
            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow"/>
        </activity>
        <activity android:name="com.example.actionbardemo.Styled"></activity>
        <activity android:name="com.example.actionbardemo.SubMenuActivity"></activity>
        
    </application>

</manifest>
